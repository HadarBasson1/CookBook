<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUser">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/edit_page_img"
            android:layout_width="413dp"
            android:layout_height="211dp"
            android:scaleType="centerCrop"

            android:src="@drawable/man"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_page_img"
            app:layout_constraintVertical_bias="0.134" />

        <EditText
            android:id="@+id/edit_page_name"
            android:layout_width="290dp"
            android:layout_height="49dp"
            android:background="#DFDDDD"
            android:backgroundTint="#DFDDDD"
            android:ems="10"
            android:hint="name"
            android:textColor="#1C1F22"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/edit_page_img"
            app:layout_constraintVertical_bias="0.118" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.147" />

        <EditText
            android:id="@+id/edit_page_phone"
            android:layout_width="290dp"
            android:layout_height="49dp"
            android:textColor="#1C1F22"

            android:background="#DFDDDD"
            android:backgroundTint="#DFDDDD"
            android:ems="10"
            android:hint="123-4567891"
            android:inputType="phone"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/edit_page_name"
            app:layout_constraintVertical_bias="0.111" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:layout_constraintVertical_bias="0.189" />

        <EditText
            android:id="@+id/edit_page_address"
            android:layout_width="290dp"
            android:layout_height="49dp"
            android:textColor="#1C1F22"

            android:background="#DFDDDD"
            android:backgroundTint="#DFDDDD"
            android:ems="10"
            android:hint="lev hazhav 23"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/edit_page_phone"
            app:layout_constraintVertical_bias="0.143" />

        <Button
            android:id="@+id/edit_page_save_btn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#DC2F02"
            android:fontFamily="@font/roboto_medium"
            android:text="SAVE"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.320"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_page_address" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>